citHeader("To cite HaugShape in publications use:")

bibentry(
  bibtype  = "Manual",
  title    = "HaugShapeV2: Morphometric Shape Analysis and Visualization Tools",
  author   = person("Colin", "Hassenbach", email = "c.hassenbach@gmail.com"),
  year     = 2025,
  note     = "R package version 0.1.0",
  url      = "https://github.com/TestoKlaus/HaugShape_v2",
  textVersion = paste(
    "Hassenbach, C. (2025).",
    "HaugShapeV2: Morphometric Shape Analysis and Visualization Tools.",
    "R package version 0.1.0.",
    "https://github.com/TestoKlaus/HaugShape_v2"
  )
)

